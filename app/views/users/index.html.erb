<div class="bg-image"id="bg-image_edit"></div>
<div class="bg-text">
    <div class="col-sm-6 mx-auto">
        <h1 class="text-center">Users</h1>
    </div>
    <div class="paginate text-center">
        <%= will_paginate %>
    </div>
    <div class="row">
        <% @users.each do |user| %>
            <div class="col-6">
                <div class="media p-2">
                    <div class="media-body p-1">
                        <% if user.picture? %>
                            <%=image_tag user.picture.url, class:"img-size rounded-circle"%>
                        <% end %>
                        <%= link_to user.name,user, class:"h3"%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>


     <div class="paginate text-center">
        <%= will_paginate %>
    </div>
</div>