<div class="font1">
    <h2 class="container"><%= @category.title %></h2>
    <h2 class="container text-right"><%= @lesson.words.count + 1 %> of <%= @lesson.category.words.count %></h2>
    <div class="bg-text">
        <div class="col-sm-6 mx-auto">
            <h1 class="text-center"><%= @lesson.next_word.content %></h1>
            <% @lesson.next_word.choices.each do |choice| %>
                <%= form_for([:lesson, @answer]) do |f|%>
                    <%= f.hidden_field :word_id, value: choice.word_id %>
                    <%= f.hidden_field :choice_id, value: choice.id %>
                    <%= f.submit choice.content, class: 'btn btn-primary btn-block m-2' %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>