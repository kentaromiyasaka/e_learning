<div class="container p-4">
<p class="lead text-muted text-center">Administrater Users</p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Admin</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <th scope="row"><%=user.name%></th>
                    <td><%=user.email%></td>
                    <% if user.is_admin? %>
                        <td><%= button_to "Remove", admin_user_path(user), method: :delete ,class:"btn btn-secondary" %></td>
                    <% else %>
                        <td><%= button_to "Add", admin_user_path(user), method: :patch ,class:"btn btn-secondary" %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>